<h1>タスク一覧</h1>
<% if logged_in? %>
        <p>ログインユーザー:<%= current_user.name %></p>
    <ul>
        <% @tasks.each do |task| %>
            <li><%= link_to task.id, task %> : <%= task.status %> &gt;<%= task.content %></li>
        <% end %>
    </ul>
<%= link_to "タスクの新規登録", new_task_path %>
<%= link_to "ログアウト",logout_path, method: :delete %>
<%= link_to "一覧へ戻る", root_url %>
<% else %>
<p></p>

<% end %>